{% extends "base.html.jinja" %}
{% block title %}Create Contract{% endblock %}

{% block content %}
    <div class="create_contract_box">
    <div class="create_contract_box_text_box">
        <p class="create_contract_box_text_box_text_main">Создать новый документ</p>
        <p class="create_contract_box_text_box_text_sub">Контракт</p>
    </div>
    <form class="create_contract_box_form" method="post" enctype="multipart/form-data">
        {{ form.hidden_tag() }}
        <div class="create_contract_box_form_element">
            {{ form.counterparty.label(class_="create_contract_box_form_element_label") }} 
            {{ form.counterparty(class_="create_contract_box_form_element_field") }}
        </div>
        <div class="create_contract_box_form_element">
            {{ form.client.label(class_="create_contract_box_form_element_label") }} 
            {{ form.client(class_="create_contract_box_form_element_field") }}
        </div>
        <div class="create_contract_box_form_element">
            {{ form.client_base.label(class_="create_contract_box_form_element_label") }}
            {{ form.client_base(class_="create_contract_box_form_element_textbox") }}
        </div>
        <div class="create_contract_box_form_element">
            {{ form.provider.label(class_="create_contract_box_form_element_label") }} 
            {{ form.provider(class_="create_contract_box_form_element_field") }}
        </div>
        <div class="create_contract_box_form_element">
            {{ form.provider_base.label(class_="create_contract_box_form_element_label") }} 
            {{ form.provider_base(class_="create_contract_box_form_element_textbox") }}
        </div>
        <div class="create_contract_box_form_element">
            {{ form.address.label(class_="create_contract_box_form_element_label") }} 
            {{ form.address(class_="create_contract_box_form_element_textbox") }}
        </div>
        <div class="create_contract_box_form_element">
            <p class="create_contract_box_form_element_label">Дата Создания:</p>
            <p class="create_contract_box_form_element_label">{{ current_date }}</p>
        </div>
        <div class="create_contract_box_form_element">
            {{ form.files.label(class_="create_contract_box_form_element_label") }}
            {{ form.files }}
        </div>
        <input type="submit" value="Создать" class="create_contract_box_form_submit">
        {% with messages = get_flashed_messages() %}
            {% if messages %}
                <ul class=auth_flashes>
                    {% for message in messages %}
                        <li>{{ message }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        {% endwith %}
    </form>
    </div>
{% endblock %}